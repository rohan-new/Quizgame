<body>
<div class="header">
	<h1>IT'S TIME TO EARN CASH</h1>
</div>
<div class="w3-main">
		<div class="form-w3l">	
             <!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert">
                <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
                
              <%= message %></div>
	<% } %>

	


			<form action="/register.html" method="POST">
				<div class="w3l-user">
					<span><i class="fa fa-user-circle-o w3l-1" aria-hidden="true"></i></span>
					<input type="text" name="username" placeholder="username" required=""/>
					<div class="clear"></div>
				</div>
				
				<div class="w3l-phone">
					<span><i class="fa fa-mobile-phone" aria-hidden="true"></i></span>
					<input type="phone" name="mobile" placeholder="paytm registered mobile number" required=""/>
					<div class="clear"></div>
				</div>
				
				<div class="w3l-password">
					<span><i class="fa fa-lock w3l-2" aria-hidden="true"></i></span>
					<input type="password" name="password" placeholder="password" required=""/>
					<div class="clear"></div>
				</div>
				
				<div class="w3l-email">
					<span><i class="fa fa-lock w3l-2" aria-hidden="true"></i></span>
					<input type="password" name="passwordMatch" placeholder="Confirm Password" required=""/>
					<div class="clear"></div>
				</div>
					
				<div class="w3l-btn">
					<input type="submit" name="button" value="sign up"/>
				</div>
			</form>
		</div>
	</div>

</body>
</html>